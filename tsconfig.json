{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ES6"],
    "strict": true,
    "jsx": "react",
    // "jsx": "preserve",
    // "jsx": "react-jsx", // 启用React JSX支持
    "esModuleInterop": true, // 允许ES模块的默认导入
    "allowSyntheticDefaultImports": true, // 允许合成默认导入
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "src/types"],
    "baseUrl": ".", // 添加 baseUrl 以支持路径别名
    "paths": {
      "@/*": ["src/*"] // 添加路径别名，@ 指向 src 目录
    }
  },
  "include": ["src"],
    "exclude": ["node_modules"],
}